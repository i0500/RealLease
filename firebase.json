{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/auth",
        "destination": "/index.html"
      },
      {
        "source": "/auth/**",
        "destination": "/index.html"
      },
      {
        "source": "/dashboard",
        "destination": "/index.html"
      },
      {
        "source": "/dashboard/**",
        "destination": "/index.html"
      },
      {
        "source": "/sheets/**",
        "destination": "/index.html"
      },
      {
        "source": "/notifications",
        "destination": "/index.html"
      },
      {
        "source": "/settings",
        "destination": "/index.html"
      }
    ]
  }
}
